accent-color = dodgerblue
dark-color = black
gutter = 1em
gutter-big = 3em
gutter-small = 0.5em
light-color = white
bg-color = black
big-break = 50em

html
  box-sizing border-box

*, *::before, *::after
  box-sizing inherit

body
  background-color ghostwhite
  color dark-color
  font-family 'Lato', sans-serif
  font-size 18px
  margin-top gutter
  margin-right gutter-small
  margin-bottom gutter
  margin-left gutter-small

a
  text-decoration-skip ink
  color accent-color

.resume
  display block
  max-width 30em
  margin 0 auto

article:not(:last-child)
  margin-bottom gutter

.block
  padding gutter-small
  border 0.2em solid bg-color
  background-color light-color

.block--main
  margin-top gutter
  background-color bg-color
  color light-color

  .details
    margin-top 0
    opacity 0.75

.h
  font-weight 900
  margin-top 0
  margin-bottom 0
  text-transform uppercase
  letter-spacing 0.05em

p
  margin-top 0.25em
  margin-bottom 0
  line-height 1.4em

.contact-info
  margin-top gutter

.contact-link
  display block
  margin-bottom 0.25em

.contact-icon
  height 1em
  position relative
  top 0.15em

.details
  font-weight 300
  font-style italic

.external-link
  overflow-wrap break-word
  word-wrap break-word

.badge
  float right
  width 10em
  margin-top 0.5em
  margin-bottom 0.5em
  margin-left 0.5em

.nudge
  margin-top 1em

.print-only
  display none

@media all and (min-width: 30em)
  .contact-info
    display flex
    flex-wrap wrap

  .contact-link
    flex-basis 50%

@media all and (min-width: big-break)
  body
    margin-top gutter-big
    margin-right gutter
    margin-bottom gutter-big
    margin-left gutter

@supports (display: flex)
  @media all and (min-width: big-break)
    .resume
      display flex
      flex-wrap wrap
      max-width 50em

    .block
      flex-basis 66.6666%
      margin-bottom 1em

    .block--main
      flex-basis 33.3333%
      margin-top 0
      text-align right

@supports (display: grid)
  @media all and (min-width: big-break)
    .resume
      display grid
      grid-template-columns 33.3333% 66.6666%

@media print
  // printers seem to prefer floats over flexbox or grid
  body
    font-size 13px
    margin 0
    background-color #fff

  a
    text-decoration none

  .print-only
    display block

  .screen-only
    display none

  .resume
    display block
    max-width 100%
    padding 2em 1em

  .block
    display block
    float left
    width 66.6666%
    margin-bottom 1em
    background-color light-color
    color dark-color
    border 0
    clear right

  .block--main
    width 33.3333%
    margin-top 0
    text-align right
    clear left

  .contact-info
    display flex
    flex-wrap wrap

  .contact-link
    flex-basis 50%
    color dark-color
