accent-color = dodgerblue
dark-color = black
gutter = 1em
light-color = white
big-break = 60em

body
  background-color light-color
  color dark-color
  font-family 'Lato', sans-serif

a
  text-decoration-skip ink
  color accent-color

p
  margin-top 0

.resume
  max-width 30em
  margin 0 auto

.nav
  list-style none
  padding-left 0

.block
  margin gutter

.block--main
  margin-top 3em

.h
  margin 0
  font-weight 900
  text-transform uppercase

.details
  font-weight 300
  font-style italic
  margin-top -1em

@media all and (min-width: big-break)
  .resume
    max-width 50em
    display grid
    grid-template-columns 38% 62%

  header
    text-align right

  nav
    display none

  .block--main
    margin-top gutter
    text-align right

  .page-link
    display none
