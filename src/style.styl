accent-color = dodgerblue
dark-color = black
gutter = 1em
gutter-big = 3em
light-color = white

body
  background-color light-color
  color dark-color
  font-family 'Lato', sans-serif
  font-size 18px

a
  text-decoration-skip ink
  color accent-color

article
  margin-bottom 1em

.resume
  max-width 30em
  margin 0 auto

.nav
  list-style none
  padding-left 0

.block
  margin gutter

.block--main
  margin-top gutter-big

  .details
    margin-top 0

.h
  font-weight 900
  margin-top 0
  margin-bottom 0
  text-transform uppercase

p
  margin-top 0.25em
  margin-bottom 0

.contact-info
  margin-top gutter

  a
    margin-right 0.5em

.details
  font-weight 300
  font-style italic

.external-link
  overflow-wrap break-word
  word-wrap break-word

.badge
  margin-top gutter

@media all and (min-width: 30em)
  .projects-details
    display grid
    grid-template-columns 50% 50%

    article:nth-child(even)
      margin-left 0.5em

    article:nth-child(odd)
      margin-right 0.5em

@media all and (min-width: 50em)
  .resume
    display grid
    grid-template-columns 38% 62%
    margin-bottom gutter-big
    margin-top gutter-big
    max-width 50em

  header
    text-align right

  .block--main
    margin-top gutter
    text-align right

  .page-link
    display none
