accent-color = #0074d9
accent-color-light = #ffdc00
text-color = #111
background-color = #fff
highlight-color = #85144b

gutter = 1em
gutter-big = 3em
gutter-small = 0.5em
big-break = 50em

font-size-huge = 4.236em
font-size-big = 2.618em
font-size-med = 1.618em
font-size-norm = 1em

html
  box-sizing border-box

*, *::before, *::after
  box-sizing inherit

body
  color text-color
  background-color background-color
  font-family 'Lato', sans-serif
  font-weight 400
  font-size 18px
  margin-top gutter
  margin-right gutter-small
  margin-bottom gutter
  margin-left gutter-small
  line-height 1.4em

a
  text-decoration-skip ink
  color accent-color

.resume
  max-width 30em
  margin 0 auto
  grid-column-gap gutter
  -ms-grid-columns 1fr 1fr 1fr
  grid-template-columns 1fr 1fr 1fr

h1
  font-size font-size-big
  margin-bottom 1rem

h2
  font-size font-size-med
  margin-top gutter-big
  margin-bottom 1rem

.header--light
  font-weight normal
  font-size font-size-norm

.header--fancy
  align-self end
  font-family 'Space Mono', monospace
  font-weight 700
  text-transform lowercase
  line-height 1.2em
  letter-spacing 0.05em

.header--fancy:after
  content ' '
  display block
  height 0.33em
  background-color accent-color-light
  margin-top -0.34em

.article
  margin-bottom gutter-big

.text
  margin-top 0.25em
  margin-bottom 0

.highlights
  padding-left 1.5em

  li
    margin-bottom 0.5em

.highlight
  font-weight 700
  color highlight-color

.contact-info
  -ms-grid-columns 1fr 1fr
  grid-template-columns 1fr 1fr

.contact-link
  display block
  margin-bottom 0.25em

.contact-icon
  height 1em
  position relative
  top 0.15em

.additional-info
  font-weight 300
  font-style italic

.external-link
  overflow-wrap break-word
  word-wrap break-word

.badge
  float right
  width 7em
  margin-top 0.5em
  margin-bottom 0.5em
  margin-left 0.5em

.header--main, .summary, .contact-info, .professional-experience--header
  -ms-grid-column 1
  -ms-grid-column-span 3
  grid-column 1 / span 3

.employment-history--header
  -ms-grid-column 1
  grid-column-start 1
  -ms-grid-row 6
  grid-row-start 6

.employment-history--employer, .employment-history--promotions
  -ms-grid-column 1
  grid-column-start 1

.certifications--header
  -ms-grid-row-align end
  align-self end
  -ms-grid-column 2
  grid-column-start 2
  -ms-grid-row 6
  grid-row-start 6

.education--header
  -ms-grid-row-align end
  align-self end
  -ms-grid-column 3
  grid-column-start 3
  -ms-grid-row 6
  grid-row-start 6

// mid-sized screens
@media all and (min-width: 30em)
  body
    margin-top gutter-big
    margin-bottom gutter-big

  .contact-info
    display -ms-grid
    display grid

// large screens
@media all and (min-width: 50em)
  .resume
    max-width 50em
    display -ms-grid
    display grid

  h1
    font-size font-size-huge

  .contact-info
    -ms-grid-coluns 1fr 1fr 1fr
    grid-template-columns 1fr 1fr 1fr

// print
@media print
  html, body
    height 100% // for vertical centering

  body
    margin 0
    font-size 12px
    display flex // also for vertical centering
    align-items center

  .resume
    max-width 100%
    display -ms-grid
    display grid

  h1, h2, .article
    margin-bottom 0

  h1
    font-size font-size-huge
    margin-top 0

  h2
    margin-top 1em

  .contact-info
    display -ms-grid
    display grid
    -ms-grid-coluns 1fr 1fr 1fr
    grid-template-columns 1fr 1fr 1fr

