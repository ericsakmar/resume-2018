// print
@media print
  body
    margin 0
    font-size 12px

  a
    text-decoration none

  .screen-only
    display none

  h1
    margin-top 0
    margin-bottom 0

  h2
    margin-bottom 0

  .resume
    max-width 60em
    display grid
    grid-column-gap gutter
    grid-template-columns 1fr 1fr 1fr

  .article
    margin-bottom gutter

  .professional-experience
    display grid
    grid-column-gap gutter
    grid-template-columns 1fr 1fr 1fr

    & > .header
      grid-row-start 1
      grid-column-start 1
      grid-column-end 4

  .contact-info
    display flex
    flex-wrap wrap
    width 75%

  .contact-link
    flex-basis 33.3333%

  .badge
    width 33%
