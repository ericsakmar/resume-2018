accent-color = dodgerblue
dark-color = black
gutter = 1em
gutter-big = 3em
gutter-small = 0.5em
light-color = white
bg-color = black

html
  box-sizing border-box

*, *::before, *::after
  box-sizing inherit

body
  background-color ghostwhite
  color dark-color
  font-family 'Lato', sans-serif
  font-size 18px
  margin-top gutter
  margin-right gutter-small
  margin-bottom gutter
  margin-left gutter-small

a
  text-decoration-skip ink
  color accent-color

.resume
  max-width 30em
  margin 0 auto

article:not(:last-child)
  margin-bottom gutter

.block
  padding gutter-small
  border 0.2em solid bg-color
  background-color light-color

.block--main
  margin-top gutter
  background-color bg-color
  color light-color

  .details
    margin-top 0
    opacity 0.75

.h
  font-weight 900
  margin-top 0
  margin-bottom 0
  text-transform uppercase

p
  margin-top 0.25em
  margin-bottom 0

.contact-info
  margin-top gutter

.contact-link
  display block
  margin-bottom 0.25em

.contact-icon
  width 1em
  margin-right 0.25em
  position relative
  top 0.25em

.details
  font-weight 300
  font-style italic

.external-link
  overflow-wrap break-word
  word-wrap break-word

.badge
  float right
  width 10em
  margin-top 0.5em
  margin-bottom 0.5em
  margin-left 0.5em

.nudge
  margin-top 1em

@media all and (min-width: 30em)
  .projects-details
    display grid
    grid-template-columns 50% 50%

    article:nth-child(even)
      margin-left 0.5em

    article:nth-child(odd)
      margin-right 0.5em

  .contact-info
    display grid
    grid-template-columns 50% 50%

@media all and (min-width: 50em)
  body
    margin-top gutter-big
    margin-right gutter
    margin-bottom gutter-big
    margin-left gutter

  .resume
    display grid
    grid-template-columns 33.3333% 66.6666%
    max-width 50em

  .block
    margin-bottom 1em

  .block--main
    margin-top 0
    text-align right

@media print
  .resume
    max-width 100%
    margin 0

  body
    font-size 12px
    margin 0
    background-color #fff

  a
    text-decoration none
