accent-color = #0074d9
accent-color-light = #ffdc00
text-color = #111
background-color = #fff
highlight-color = #85144b

gutter = 1em
gutter-big = 3em
gutter-small = 0.5em
big-break = 50em

font-size-huge = 4.236em
font-size-big = 2.618em
font-size-med = 1.618em
font-size-norm = 1em

html
  box-sizing border-box

*, *::before, *::after
  box-sizing inherit

body
  color text-color
  background-color background-color
  font-family 'Lato', sans-serif
  font-weight 400
  font-size 18px
  margin-top gutter
  margin-right gutter-small
  margin-bottom gutter
  margin-left gutter-small
  line-height 1.5em

a
  text-decoration-skip ink
  color accent-color

.resume
  display block
  max-width 30em
  margin 0 auto
  grid-column-gap gutter
  grid-template-columns 2fr 1fr
  grid-template-rows auto auto auto auto 1fr

h1
  font-size font-size-big
  margin-bottom 1rem

h2
  font-size font-size-med
  margin-top 1rem
  margin-bottom 1rem

h3
  margin-top gutter
  margin-bottom 0

.header--fancy
  align-self end
  font-family 'Space Mono', monospace
  font-weight 700
  text-transform lowercase
  line-height 1.2em
  letter-spacing 0.05em

.header--fancy:after
  content ' '
  display block
  height 0.33em
  background-color accent-color-light
  margin-top -0.34em

.highlight
  font-weight 700
  color highlight-color

.em
  font-weight 300
  font-style italic

.contact-link
  display block
  margin-bottom 0.25em

.contact-icon
  height 1em
  position relative
  top 0.15em

.employment__text
  margin-top 0
  margin-bottom 0

.experience__summary
  margin-bottom 0

.experience__stack
  font-weight 300
  font-style italic
  margin-top 0

.badge
  float right
  width 6em
  margin-top 0.5em
  margin-bottom 0.5em
  margin-left 0.5em

.contact-info, .professional-experience, .certifications, .education
  margin-top gutter-big

// these will only kick in on big screens
// and when grid is supported
.header__main, .summary
  grid-column 1 / span 2

.contact-info
  grid-column-start 2
  grid-row-start 3

.professional-experience
  grid-row 3 / span 3

.professional-experience__level:not(:last-child)
  border-bottom 0.1rem solid accent-color-light

.certifications
  grid-column-start 2
  grid-row-start 4

.education
  grid-column-start 2
  grid-row-start 5

// mid-sized screens
@media all and (min-width: 30em)
  body
    margin-top gutter-big
    margin-bottom gutter-big

// large screens
@media all and (min-width: 50em)
  .resume
    width 50em

  @supports (display: grid)
    .resume
      display grid
      max-width 50em
      width auto

    h1
      font-size font-size-huge

// print
@media print
  html, body
    height 100% // for vertical centering

  body
    margin 0
    font-size 12px
    display flex // also for vertical centering
    align-items center

  .resume
    max-width 100%
    display grid

  h1, h2
    margin-bottom 0

  h1
    font-size font-size-huge
    margin-top 0

  h2
    margin-top 1em
