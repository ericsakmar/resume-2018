accent-color = #0074d9
accent-color-light = #ffdc00
text-color = #111
background-color = #fff
highlight-color = #85144b

gutter = 1em
gutter-big = 3em
gutter-small = 0.5em
big-break = 50em

html
  box-sizing border-box

*, *::before, *::after
  box-sizing inherit

body
  color text-color
  background-color background-color
  font-family 'Lato', sans-serif
  font-weight 400
  font-size 18px
  margin-top gutter
  margin-right gutter-small
  margin-bottom gutter
  margin-left gutter-small
  line-height 1.4em

a
  text-decoration-skip ink
  color accent-color

.resume
  max-width 30em
  margin 0 auto

h1
  font-size 2.618em

h2
  font-size 1.618em
  margin-top gutter-big

.header--light
  font-weight normal
  font-size 1em

.header--fancy
  align-self end
  font-family 'Space Mono', monospace
  font-weight 700
  text-transform lowercase
  line-height 1.2em
  letter-spacing 0.05em

.header--fancy:after
  content ' '
  display block
  height 0.33em
  background-color accent-color-light
  margin-top -0.34em

.article
  margin-bottom gutter-big

.text
  margin-top 0.25em
  margin-bottom 0

.highlights
  padding-left 1.5em

  li
    margin-bottom 0.5em

.highlight
  font-weight 700
  color highlight-color

.contact-link
  display block
  margin-bottom 0.25em

.contact-icon
  height 1em
  position relative
  top 0.15em

.additional-info
  font-weight 300
  font-style italic

.external-link
  overflow-wrap break-word
  word-wrap break-word

.badge
  float right
  width 7em
  margin-top 0.5em
  margin-bottom 0.5em
  margin-left 0.5em

// mid-sized screens
@media all and (min-width: 30em)
  body
    margin-top gutter-big
    margin-bottom gutter-big

  .contact-info
    display flex
    flex-wrap wrap

  .contact-link
    flex-basis 50%

// print
@media print
  body
    margin 0
    font-size 12px

  h1
    margin-top 0
    margin-bottom 0

  h2
    margin-top 2em
    margin-bottom 0

  .resume
    max-width 100%
    display grid
    grid-column-gap gutter
    grid-template-columns 1fr 1fr 1fr

  .header--main, .summary, .contact-info, .professional-experience--header
    grid-column 1 / span 3

  .employment-history--header
    grid-column-start 1
    grid-row-start 6

  .employment-history--employer, .employment-history--promotions
    grid-column-start 1

  .certifications--header
    align-self end
    grid-column-start 2
    grid-row-start 6

  .education--header
    align-self end
    grid-column-start 3
    grid-row-start 6

  .article
    margin-bottom 0

  .contact-info
    display flex
    flex-wrap wrap

  .contact-link
    flex-basis 33.3333%

  .badge
    width 33%
