accent-color = #086788
text-color = #523f38
background-color = #e7ec3f
highlight-color = #1ea896

gutter = 1em
gutter-big = 3em
gutter-small = 0.5em
big-break = 50em

html
  box-sizing border-box

*, *::before, *::after
  box-sizing inherit

body
  color text-color
  font-family 'Lato', sans-serif
  font-size 18px
  margin-top gutter
  margin-right gutter-small
  margin-bottom gutter
  margin-left gutter-small
  line-height 1.4em

a
  text-decoration-skip ink
  color accent-color

.resume
  max-width 30em
  margin 0 auto

.header
  margin-top 0
  margin-bottom 0

.header--sub
  margin-top gutter

.header--light
  font-weight normal
  font-size 1em

.header--fancy
  font-family monospace
  color accent-color
  background-color lighten(accent-color, 90%)
  padding 0.1em
  padding-top 0.2em

.header--fancy:before
  content '// '

.article
  margin-bottom 2em

.text
  margin-top 0.25em
  margin-bottom 0

.highlight
  font-weight 700
  color highlight-color

.contact-info
  margin-top gutter

.contact-link
  display block
  margin-bottom 0.25em

.contact-icon
  height 1em
  position relative
  top 0.15em

.additional-info
  font-weight 300
  font-style italic

.external-link
  overflow-wrap break-word
  word-wrap break-word

.badge
  float right
  width 10em
  margin-top 0.5em
  margin-bottom 0.5em
  margin-left 0.5em

.print-only
  display none

@media all and (min-width: 30em)
  .contact-info
    display flex
    flex-wrap wrap

  .contact-link
    flex-basis 50%

@media all and (min-width: big-break)
  body
    margin-top gutter-big
    margin-right gutter
    margin-bottom gutter-big
    margin-left gutter

